@model IList<MySurveys.Models.Survey>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron text-center">
    <h1>Always The Real Thing, Always MySurveys</h1>
    <h4 class="pull-right"><i>Start creating cool surveys.</i></h4>
</div>
<hr />
<div class="jumbotron">
@for (int i = 0; i < Model.Count(); i++)
{
    <div class="row">
        <div class="col-md-4">
            Title: @Html.ActionLink(Model[i].Title, "Details", "Home", new { area = "Surveys", id = Model[i].Id }, null)
        </div>
        <div class="col-md-4">
            Author: @Model[i].Author.UserName
        </div>
        <div class="col-md-4">
            CreatedOn: @Model[i].CreatedOn.ToShortDateString()
        </div>
    </div>
    <br />
}
</div>

