@model MySurveys.Web.Areas.Surveys.ViewModels.SurveyViewModel

<div class="modal-body">
    <div class="alert alert-danger">
        <span class="glyphicon glyphicon-question-sign"></span>
        <h4><span class="text-center">Save your new survey:</span></h4>
    </div>

    @using (Html.BeginForm("SaveSurvey", "MySurveys", new { area = "Surveys" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.EditorFor(m => m.Title, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.IsPublic, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.EditorFor(m => m.IsPublic, new { @class = "form-control" })
            </div>
        </div>
        <br /><br /><br />
        <div class="form-group">
            <div class="col-md-4 col-md-offset-4 pull-right">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" id="approve-btn" class="btn btn-primary">Save</button>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
