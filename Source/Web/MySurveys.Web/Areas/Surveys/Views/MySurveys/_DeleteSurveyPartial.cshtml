@model Int32?

<div class="modal-body">
    <div class="alert alert-danger text-center">
        <h3>Are you sure you want to delete this survey?</h3>
        <i>All questions and answers will be deleted too.</i>
    </div>

    @using (Html.BeginForm("DeleteSurveyConfirmation", "MySurveys", new { area = "Surveys" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", Model.ToString())
        <br /><br /><br />
        <div class="form-group">
            <div class="col-md-4 col-md-offset-4 pull-right">
                <button type="submit" id="approve-btn" class="btn btn-primary">Delete</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/saveModal")
}



