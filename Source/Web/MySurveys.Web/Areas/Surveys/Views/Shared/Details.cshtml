@model MySurveys.Web.Areas.Surveys.ViewModels.SurveyViewModel
@{
    ViewBag.Title = "Details";
}
<div class="jumbotron text-center">
    <h1>Details <span class="glyphicon glyphicon-info-sign"></span></h1>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div>
                @Html.LabelFor(m => m.Title)
                @Html.DisplayFor(m => m.Title)
            </div>
            <div>
                @Html.LabelFor(m => m.AuthorUsername)
                @Html.DisplayFor(m => m.AuthorUsername)
            </div>
           <div>
               @Html.LabelFor(m => m.TotalQuestions)
               @Html.DisplayFor(m => m.TotalQuestions)
           </div>
            <div>
                @Html.LabelFor(m => m.TotalAnswers)
                @Html.DisplayFor(m => m.TotalAnswers)
            </div>
            
        </div>
    </div>
</div>

