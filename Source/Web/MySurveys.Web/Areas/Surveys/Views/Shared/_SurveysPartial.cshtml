@model Dictionary<int, MySurveys.Web.Areas.Surveys.ViewModels.SurveyViewModel>
@foreach (var item in Model)
{
    <tr>
        <td class="text-center">@item.Key</td>
        <td>@item.Value.Title</td>
        <td>@item.Value.AuthorUsername</td>
        <td class="text-center">@item.Value.Questions.Count</td>
        <td class="text-center">@item.Value.Responses.Count</td>
        <td class="text-center">@Html.DisplayFor(m=>item.Value.IsPublic)</td>
        <td>
            <a href="@Url.Action("FillingUp", "Surveys", new { id = item.Value.Url.Substring(item.Value.Url.LastIndexOf('/') + 1), area = "Surveys" })" class="btn btn-md btn-primary btn-block">
                <i class="glyphicon glyphicon-pencil">Start</i>
                <span class="sr-only">Start</span>
            </a>
        </td>
    </tr>
}
